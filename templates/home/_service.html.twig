{% block body %}
<section id="hw-service" class="section">
    <h2>{{ services.title|trans }}</h2>
    <div class="hw-underline-new"></div>
    <div class="price">
        {% for i in 0..services.services|length -1 %}
        <div class="price-card">
            <header>
                <div class="price-card-icon">
                    <img src="{{ asset('build/images/logos/' ~ services.icons[i] ) }}" alt="">
                </div>
                <div></div>
                <h3>{{ services.services[i]|trans }}</h3>
                <div>
                    <p>Ã  partir de</p>
                    <p>{{ services.price_1[i]|trans }}<sup class="text-4xl">{{ services.symb_1[i]|trans }}{% if services.sup_1[i]|trans %} {{ services.sup_1[i]|trans }}{% endif %}</sup></p>
                </div>
                <div class="a-btn price-card-btn">
                    <a href="#" data-more="{{ services.more_0[i]|trans }}" data-less="{{ services.less_0[i]|trans }}">
                        {{ services.more_0[i]|trans }}</a>
                </div>
            </header>
            <div class="price-card-details is-closed">
                <aside>
                    <div>
                        <p>{{ services.price_1[i]|trans }}{% if services.symb_1[i]|trans %}<sup>{{ services.symb_1[i]|trans }}</sup>{% endif %}</p>
                        <img src="{{ asset('build/images/logos/cesu.svg') }}" alt="">
                    </div>
                    <p>ou</p>
                    <div>
                        <p>{{ services.price_0[i]|trans }}{% if services.symb_0[i]|trans %}<sup>{{ services.symb_0[i]|trans }}</sup>{% endif %}<span>ttc</span></p>
                    </div>
                </aside>
                <div class="price-card-services">
                    <ul>
                        <li><img src="{{ asset('build/images/logos/check.svg') }}" alt="">{{ services.description_0[i]|trans }}</li>
                        <li><img src="{{ asset('build/images/logos/check.svg') }}" alt="">{{ services.description_1[i]|trans }}</li>
                        <li><img src="{{ asset('build/images/logos/check.svg') }}" alt="">{{ services.description_2[i]|trans }}</li>
                    </ul>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}
